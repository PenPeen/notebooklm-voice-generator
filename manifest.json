{
  "manifest_version": 3,
  "name": "NotebookLM Auto Generator",
  "version": "1.1.0",
  "description": "クリップボードのURLからNotebookLMの音声要約を自動生成",
  "permissions": [
    "clipboardRead",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://notebooklm.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["https://notebooklm.google.com/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "start-automation": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "クリップボードのURLでNotebookLM自動生成を開始"
    }
  }
}